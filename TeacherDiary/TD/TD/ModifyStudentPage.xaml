<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TD.ModifyStudentPage">
    <StackLayout Padding="20">
        <Frame BackgroundColor="ForestGreen" Padding="24" CornerRadius="0">
            <Label Text="Tanári napló - Tanuló módosítás" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Label Text="Tanuló neve"></Label>
        <Entry x:Name="nameEntry" Text="" VerticalOptions="Start" HorizontalOptions="FillAndExpand"/>

        <Button x:Name="modifyStudentBtn" BackgroundColor="YellowGreen" Text="Módosít" FontSize="24" Clicked="modifyStudentBtn_Clicked"></Button>
        
    </StackLayout>
</ContentPage>