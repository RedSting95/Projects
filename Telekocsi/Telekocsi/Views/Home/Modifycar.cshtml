@{
}
@model Cars

<h3>Modify car</h3>

<form method="post" enctype="multipart/form-data" asp-action="Modifycar" asp-controller="Home">

    <input type="hidden" name="id" value="@Model.Id" />

    <input type="hidden" name="lineid" value="@Model.LineId" />

    <label for="occupiedSpots">Occupied spots: </label>
    <input type="number" min="0" name="occupiedspots" value="@Model.OccupiedSpots"/>
    <span style="color:red; font-size:14px;">@ViewData["carOSError"]</span><br />

    <label for="start">Start: </label>
    <input type="datetime" name="start" value="@Model.Start"/>
    <span style="color:red; font-size:14px;">@ViewData["carStartError"]</span><br />

    <input type="hidden" name="occupiedspots" value="0" />


    <button type="submit">Modify car</button> <a href="/Home/Index">Abort</a>  <br />
    <span>@ViewData["formValide"]</span>
</form>
